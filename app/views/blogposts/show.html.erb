<h1><%= @blogpost.title %></h1>

<p><%= @blogpost.body %></p>

<%= link_to "Home", root_path %><br>
<%= link_to "Edit", edit_blogpost_path(@blogpost) %><br>
<%= link_to "Delete", blogpost_path(@blogpost), method: :delete %>

<h3>Create new comment</h3>

<%= form_with model: [@blogpost, @blogpost.comments.build] do |form| %>
	<div>
		<%= form.label :username %><br>
		<%= form.text_field :username %>
	</div>

	<div>
		<%= form.label :body %><br>
		<%= form.text_field :body %>
	</div>

	<div>
		<%= form.submit %>
	</div>
<% end %>

<h3>Comments</h3>

<ul>
	<% Comment.all.each do |comment| %>
		<li>
			<h4><%= comment.username %></h4>
			<p><%= comment.body %></p>
		</li>
	<% end %>
</ul>
